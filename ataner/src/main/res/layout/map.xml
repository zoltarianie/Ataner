    <com.google.android.maps.MapView
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:enabled="true"
        android:clickable="true"
        android:apiKey="AIzaSyBSdWm0qG0T4U1Gf3JLTU9cpG6Zlak5KwM"
